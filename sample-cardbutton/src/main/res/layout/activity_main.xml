<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="net.xpece.android.widget.cardbutton.sample.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:layoutMode="opticalBounds"
        android:orientation="vertical"
        android:paddingLeft="?listPreferredItemPaddingLeft"
        android:paddingTop="8dp"
        android:paddingRight="?listPreferredItemPaddingRight"
        android:paddingBottom="8dp">

        <com.google.android.material.widget.CardButton
            android:id="@+id/sl"
            style="@style/Widget.Design.CardButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:background="@null"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Single line"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:backgroundTint="#f0f"
            app:drawableStartCompat="@drawable/ic_android_control_24dp"
            app:rippleColor="#8000" />
        <!--android:drawSelectorOnTop="false"-->
        <!--android:background="@drawable/gradient_background"-->
        <!--app:backgroundTint="@null"-->

        <com.google.android.material.widget.CardButton
            android:id="@+id/ct"
            style="@style/Widget.Design.CardButton.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:drawSelectorOnTop="false"
            android:text="Draw selector below"
            app:carb_cornerRadius="10dp"
            app:rippleColor="#80f0" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/ct2"
            style="@style/Widget.Design.CardButton.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:drawSelectorOnTop="true"
            android:text="Draw selector on top"
            app:carb_cornerRadius="10dp"
            app:rippleColor="#80f0" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cbg"
            style="@style/Widget.Design.CardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:background="@drawable/gradient_background"
            android:drawSelectorOnTop="false"
            android:text="Draw selector below"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:backgroundTint="@null"
            app:rippleColor="#8000" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cbg2"
            style="@style/Widget.Design.CardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:background="@drawable/gradient_background"
            android:drawSelectorOnTop="true"
            android:text="Draw selector on top"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:backgroundTint="@null"
            app:rippleColor="#8000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Platform" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="No style"
            app:drawableStartCompat="@drawable/ic_android_control_24dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb0b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:enabled="false"
            android:text="No style"
            app:drawableStartCompat="@drawable/ic_android_control_24dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb1"
            style="@style/Widget.Design.CardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            app:drawableStartCompat="@drawable/ic_android_control_24dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb1b"
            style="@style/Widget.Design.CardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:enabled="false"
            app:drawableStartCompat="@drawable/ic_android_control_24dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb2"
            style="@style/Widget.Design.CardButton.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:rotation="60"
            android:text="Short"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:translationX="-60dp"
            android:translationY="30dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb2b"
            style="@style/Widget.Design.CardButton.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:enabled="false"
            android:rotation="60"
            android:text="Round"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:translationX="60dp"
            android:translationY="-30dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb3"
            style="@style/Widget.Design.CardButton.Bordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="Long-ass text" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb3b"
            style="@style/Widget.Design.CardButton.Bordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:enabled="false"
            android:text="Dumb and dumber" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb4"
            style="@style/Widget.Design.CardButton.Bordered.Colored"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="XXX"
            app:drawableBottomCompat="@drawable/ic_android_black_24dp"
            app:drawableEndCompat="@drawable/ic_android_black_24dp"
            app:drawableStartCompat="@drawable/ic_android_black_24dp"
            app:drawableTint="@color/abc_btn_colored_borderless_text_material"
            app:drawableTopCompat="@drawable/ic_android_black_24dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb4b"
            style="@style/Widget.Design.CardButton.Bordered.Colored"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:enabled="false"
            android:text="YYY"
            app:drawableBottomCompat="@drawable/ic_android_black_24dp"
            app:drawableEndCompat="@drawable/ic_android_black_24dp"
            app:drawableStartCompat="@drawable/ic_android_black_24dp"
            app:drawableTint="@color/abc_btn_colored_borderless_text_material"
            app:drawableTopCompat="@drawable/ic_android_black_24dp" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb5"
            style="@style/Widget.Design.CardButton.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="ZZZ" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb5b"
            style="@style/Widget.Design.CardButton.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:enabled="false"
            android:text="WWW" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb6"
            style="@style/Widget.Design.CardButton.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="Borderless 1" />

        <com.google.android.material.widget.CardButton
            android:id="@+id/cb6b"
            style="@style/Widget.Design.CardButton.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:enabled="false"
            android:text="Borderless 2" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:rotation="60" />

        <AbsoluteLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.widget.CardButton
                style="@style/Widget.Design.CardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/unknownName" />
        </AbsoluteLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
