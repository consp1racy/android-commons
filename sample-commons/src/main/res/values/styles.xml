<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:datePickerStyle" tools:targetApi="lollipop">@style/Widget.MyApp.DatePicker</item>
        <item name="android:timePickerStyle" tools:targetApi="lollipop">@style/Widget.MyApp.TimePicker</item>
    </style>

    <style name="Widget.MyApp.TimePicker" parent="android:Widget">
        <item name="android:timePickerMode" tools:targetApi="lollipop">spinner</item>
    </style>

    <style name="Widget.MyApp.DatePicker" parent="android:Widget">
        <item name="android:datePickerMode" tools:targetApi="lollipop">spinner</item>
    </style>

    <style name="TextAppearance.Raleway.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textFontWeight">400</item>
        <item name="textFontWeight">400</item>
    </style>

    <style name="TextAppearance.Raleway.Thin" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textFontWeight">100</item>
        <item name="textFontWeight">100</item>
    </style>

    <style name="TextAppearance.Raleway.Thin.Italic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textFontWeight">100</item>
        <item name="textFontWeight">100</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
