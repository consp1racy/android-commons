<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectLockedImageView">
        <attr name="aspectRatioWidth" format="integer"/>
        <attr name="aspectRatioHeight" format="integer"/>
        <attr name="aspectRatioAdjust" format="enum">
            <enum name="determine" value="0"/>
            <enum name="height" value="1"/>
            <enum name="width" value="2"/>
        </attr>
    </declare-styleable>

