<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectLockedImageView">
        <attr name="aspectRatioWidth" format="integer"/>
        <attr name="aspectRatioHeight" format="integer"/>
        <attr name="aspectRatioAdjust" format="enum">
            <enum name="determine" value="0"/>
            <enum name="height" value="1"/>
            <enum name="width" value="2"/>
        </attr>
        <attr name="aspectRatioSource" format="enum">
            <enum name="specified" value="0"/>
            <enum name="drawable" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="FontFitTextView">
        <attr name="minTextSize" format="reference|dimension"/>
        <attr name="maxTextSize" format="reference|dimension"/>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="minCollapsedLines" format="integer"/>
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="expandDrawable" format="reference"/>
        <attr name="collapseDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="OverlayImageView">
        <attr name="oiv_overlay" format="reference" />
        <attr name="oiv_overlayPadding" format="dimension|reference" />
        <attr name="oiv_overlayGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="center" value="0x11"/>
        </attr>
    </declare-styleable>
</resources>
